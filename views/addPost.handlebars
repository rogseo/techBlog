<form>
  <div class="form-group">
    <label for="add-title">Title :</label>
    <input type="text" class="form-control" id="add-title">
  </div>
  
  <div class="form-group">
    <label for="add-description">Content : </label>
    <textarea class="form-control" id="add-description" rows="3"></textarea>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary" id="submit-post">Submit</button>
  </div>
</form>

{{!-- <script src="./js/script.js"></script> --}}
<script>

const addPostHandler = async (event) => {
    event.preventDefault();

    const title = document.querySelector('#add-title').value;
    const description = document.querySelector('#add-description').value;

    if (title && description) {
        const response = await fetch('/api/posts', {
            method: 'POST',
            body: JSON.stringify({ title, description }),
            headers: { 'Content-Type': 'application/json' },
        });

        if (response.ok) {
            alert('Successfully post');
            document.location.replace('/api/posts');

        } else {
            alert('Failed to post.');
        }
    }
};


const addPostBtn = document.querySelector('#submit-post');
addPostBtn.addEventListener('click', addPostHandler);

</script>