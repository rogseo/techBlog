

<div class="row justify-content-center align-items-center">
  <div class="login-card col-3">
    <h2 class="page-title">Login</h2>
    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">Email:</label>
        <input class="form-control" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-control" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" id="login-button" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="login-card col-3">
    <h2 class="page-title">Signup</h2>
    <form class="form signup-form">
     <div class="form-group">
        <label for="username-signup">Username:</label>
        <input type="text" class="form-control" id="username-signup" aria-describedby="emailHelp">
      </div>
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input type="email" class="form-control" id="email-signup" aria-describedby="emailHelp">
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-control" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" id="signup-button" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js">

</script>


